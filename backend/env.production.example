# Production Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/career-guidance
# Replace with your actual MongoDB Atlas connection string

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=https://your-app-name.azurestaticapps.net

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-app-name.azurestaticapps.net/auth/google/callback

# Azure Configuration
AZURE_STATIC_WEB_APPS_API_TOKEN=your-azure-token


